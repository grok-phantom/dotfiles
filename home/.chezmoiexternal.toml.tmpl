[".oh-my-zsh"]
    type = "archive"
    url = "https://github.com/ohmyzsh/ohmyzsh/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"

[".oh-my-zsh/custom/plugins/zsh-syntax-highlighting"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-syntax-highlighting/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".oh-my-zsh/custom/plugins/zsh-vi-mode"]
    type = "archive"
    url = "https://github.com/jeffreytse/zsh-vi-mode/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".oh-my-zsh/custom/themes/powerlevel10k"]
    type = "archive"
    url = "https://github.com/romkatv/powerlevel10k/archive/v1.18.0.tar.gz"
    exact = true
    stripComponents = 1

[".vim_runtime"]
    type = "archive"
    url = "https://github.com/amix/vimrc/archive/master.tar.gz"
    refreshPeriod = "168h"
    stripComponents = 1
    exact = true

[".vim_runtime/my_plugins/jedi-vim"]
    type = "archive"
    url = "https://github.com/davidhalter/jedi-vim/archive/master.tar.gz"
    stripComponents = 1
    refreshPeriod = "168h"
    exact = true

[".vim_runtime/my_plugins/jedi-vim/pythonx/jedi"]
    type = "archive"
    url = "https://github.com/davidhalter/jedi/archive/master.tar.gz"
    stripComponents = 1
    refreshPeriod = "168h"
    exact = true

[".vim_runtime/my_plugins/jedi-vim/pythonx/parso"]
    type = "archive"
    url = "https://github.com/davidhalter/parso/archive/master.tar.gz"
    stripComponents = 1
    refreshPeriod = "168h"
    exact = true

{{- if and (not .ephemeral) (not .headless) }}
{{-   $fontDir := "" }}
{{-   if eq .chezmoi.os "darwin" }}
{{-     $fontDir = "Library/Fonts" }}
{{-   else if eq .chezmoi.os "linux" }}
{{-     $fontDir = ".local/share/fonts" }}
{{-   end }}
{{-   range (list
        "MesloLGS NF Regular.ttf"
        "MesloLGS NF Bold.ttf"
        "MesloLGS NF Italic.ttf"
        "MesloLGS NF Bold Italic.ttf") }}
["{{ $fontDir }}/{{ . }}"]
    type = "file"
    url = "https://github.com/romkatv/powerlevel10k-media/raw/master/{{ . }}"
    refreshPeriod = "168h"
{{-   end }}
{{- end }}
